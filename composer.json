{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
      "php": ">=7.4",
      "ext-ctype": "*",
      "ext-iconv": "*",
      "ext-json": "*",
      "composer/package-versions-deprecated": "1.11.99.1",
      "doctrine/annotations": "^1.13",
      "doctrine/doctrine-bundle": "^2.2",
      "doctrine/doctrine-migrations-bundle": "^3.0",
      "doctrine/orm": "^2.8",
      "nette/robot-loader": "^3.4",
      "ramsey/uuid": "^4.1",
      "symfony/console": "5.2.*",
      "symfony/dotenv": "5.2.*",
      "symfony/flex": "^1.3.1",
      "symfony/framework-bundle": "5.2.*",
      "symfony/messenger": "5.2.*",
      "symfony/twig-bundle": "5.2.*",
      "symfony/yaml": "5.2.*"
    },
    "require-dev": {
      "behat/behat": "^3.8",
      "doctrine/doctrine-fixtures-bundle": "^3.4",
      "friends-of-behat/symfony-extension": "^2.1",
      "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
      "auto-scripts": {
        "cache:clear": "symfony-cmd",
        "assets:install %PUBLIC_DIR%": "symfony-cmd"
      },
      "post-install-cmd": [
        "@auto-scripts"
      ],
      "post-update-cmd": [
        "@auto-scripts"
      ],
      "dddocs-gen": [
        "@php bin/console app:docs:classLoader:cache-clear",
        "@php bin/console app:docs:sphinx-clear",
        "@php bin/console app:docs:generate",
        "make -C /application/resources/sphinx html"
      ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        }
    }
}
